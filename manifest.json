{
  "manifest_version": 3,
  "name": "Brevity",
  "version": "1.0.0",
  "description": "Instant AI-powered summaries of movie and TV show descriptions on Netflix, YouTube, IMDb, and Prime Video. Hover to summarize.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.youtube.com/*",
    "https://www.imdb.com/*",
    "https://www.primevideo.com/*",
    "https://www.amazon.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Brevity Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*",
        "https://www.imdb.com/*",
        "https://www.primevideo.com/*",
        "https://www.amazon.com/*"
      ],
      "js": [
        "constants.js",
        "utils.js",
        "cache.js",
        "overlay.js",
        "domObserver.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
